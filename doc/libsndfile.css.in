body {
	background : @HTML_BGCOLOUR@ ;
	color : @HTML_FGCOLOUR@ ;
	font-family : arial, helvetica, sans-serif ;
	line-height: 1.5 ;
	margin-left : 3% ;
	margin-right : 3% ;
}
.indent_block {
	margin-left : 7% ;
	margin-right : 7% ;
}
